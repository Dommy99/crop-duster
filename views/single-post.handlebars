<!-- Container fluid -->
<div class="container-fluid p-6">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-12">
      <!-- Page header -->
      <div class="border-bottom pb-4 mb-4">
        <h3 class="mb-0 fw-bold">
          {{post.title}}
        </h3>
      </div>
      <h4 class="text-muted">
        {{post.subtitle}}
      </h4>
    </div>
  </div>
  <!-- content -->
  <div class="py-6">
    <!-- row -->
    <div class="row">
      <div class="col-xl-6 col-md-12 col-12 mb-6 mx-auto">
        <!-- card -->
        <div class="card">
          <!-- card body -->
          <div class="card-body">
            <div
              class="d-flex justify-content-between mb-5
                      align-items-center"
            >
              <!-- avatar -->
                <a href="/profile/{{post.user.id}}">
              <div class="d-flex align-items-center">
                <div>
                  <img
                    src="https://avatars.dicebear.com/api/croodles/{{post.user.id}}.svg?background=%23ffffff"
                    alt=""
                    class="avatar avatar-md rounded-circle"
                  />
                </div>
                <div class="ms-3">
                  <h5 class="mb-0 fw-bold">
                    {{post.user.username}}
                  </h5>
                  <p class="mb-0">
                    {{format_date post.created_at}}
                  </p>
                </div>
              </div>
                </a>
              <div>
                <!-- dropdown -->
                <div class="dropdown dropstart">
                  <a
                    href="#"
                    class="text-muted text-primary-hover"
                    id="dropdownprojectFive"
                    data-bs-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    <i data-feather="more-vertical" class="icon-xxs"></i>
                  </a>
                  <div
                    class="dropdown-menu"
                    aria-labelledby="dropdownprojectFive"
                  >
                    <a class="dropdown-item" href="#">
                      Action
                    </a>
                    <a class="dropdown-item" href="#">
                      Another action
                    </a>
                    <a class="dropdown-item" href="#">
                      Something else
                              here
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="mb-4">
              <!-- text -->
              <p class="mb-4">
                {{post.post_text}}
              </p>
              <img
                src="https://doodleipsum.com/477x229/abstract?bg=lightgray&n={{id}}"
                class="rounded-3 w-100"
                alt=""
              />
            </div>
            <!-- icons -->
            <div class="mb-4">
              <span class="me-1 me-md-4">
                <i
                  data-feather="message-square"
                  class="icon-xxs
                          text-muted me-2"
                ></i>
                <span>
                  {{post.comments.length}}
                  {{format_plural 'comment' post.comments.length}}
                </span>
              </span>
            </div>
            <div
              class="border-bottom border-top py-5 d-flex
                      align-items-center mb-4"
            >
              <!-- avatar group -->
              <div class="avatar-group me-2 me-md-3">
                <span class="avatar avatar-sm">
                  <!-- img -->
                  <img
                    alt="avatar"
                    src="/images/avatar/avatar-7.jpg"
                    class="rounded-circle"
                  />
                </span>
                <span class="avatar avatar-sm">
                  <!-- img -->
                  <img
                    alt="avatar"
                    src="/images/avatar/avatar-8.jpg"
                    class="rounded-circle"
                  />
                </span>
                <span class="avatar avatar-sm">
                  <!-- img -->
                  <img
                    alt="avatar"
                    src="/images/avatar/avatar-9.jpg"
                    class="rounded-circle"
                  />
                </span>
              </div>
              <div>
                <span>
                  You and 20 more liked this
                </span>
              </div>
            </div>
              {{> comments post.comments}}
            <!-- row -->
            <div class="row">
              <div class="col-xl-1 col-lg-2 col-md-2 col-12 mb-3 mb-lg-0">
                <!-- avatar -->
                <img
                  src="https://avatars.dicebear.com/api/croodles/{{id}}.svg?background=%23ffffff"
                  class="avatar avatar-md rounded-circle"
                  alt=""
                />
              </div>
              <!-- input -->
              <div class="col-xl-11 col-lg-10 col-md-9 col-12">
                    <form class="comment-form">
                <div class="row g-3 align-items-center">
                    <div class="col-md-2 col-xxl-1">
                      <label for="name" class="col-form-label">
                        {{username}}
                      </label>
                    </div>
                      <div class="col-md-8 col-xxl-9  mt-0 mt-md-3">
                        <textarea
                          name="comment-text"
                          class="form-control"
                          aria-describedby="name"
                        ></textarea>
                      </div>
                      <div class="col-md-2 col-xxl-2">
                        <button type="submit" class="btn btn-primary">
                          Comment
                        </button>
                      </div>
                </div>
                    </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/comment.js"></script>