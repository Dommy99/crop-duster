<div class="collapse mt-10 pt-10" id="postCollapse">
  <form class="post-form">
    <h4 class="mb-3 text-light">Create a New Post</h4>
    <label class="form-label text-light" for="post-title">Title</label>
    <div class="mb-3">
      <input name="post-title" class="form-control border-300" id="post-title" placeholder="Grab their attention"/>
    </div>
    <label class="form-label text-light" for="post-subtitle">Subtitle</label>
    <div class="mb-3">
      <input name="post-subtitle" class="form-control border-300" id="post-subtitle" placeholder="Say a little more"/>
    </div>
    <label class="form-label text-light" for="post-text">Post</label>
    <div class="mb-3">
      <textarea name="post-text" class="form-control border-300" id="post-text" rows="10" placeholder="Tell the world..."></textarea>
    </div>
    <button type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#postCollapse">Never Mind</button>
    <button type="submit" class="btn btn-primary">Submit Post</button>
<input id='fileid' type='file' hidden/>
<input id='buttonid' type='button' value='Add Doodle' accept="image/png" class="btn btn-primary"/>
</div>